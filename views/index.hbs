<body>

  <div>
    <div id="myModal" class="myModal">
      <span class="close cursor" onclick="closeModal()">&times;</span>
      <div class="modal_content" id="contentInGallery">

      </div>
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>

    <div class="lenta">
      {{#if isAuth}}
      <form action="/create" method="POST" class="writePost" id="writePost"> 
        <div class='boxInput'>
          <div class="row">
            <form class="col s12" id="inputText" method="POST">
              <div class="row">
                <div class="input-field col s12">
                  <i class="material-icons prefix" id="picWrite">mode_edit</i>
                  <textarea id="input" class="materialize-textarea"></textarea>
                  <label for="input" id="pref" class="lInput">Написать</label>
                </div>
              </div>
            </form>
          </div>
        </div>  

        <form enctype="multipart/form-data" method="POST" id="uploadImgForm"> 
          <div class="file-field input-field">
            <div class="btn">
              <span>Загрузить</span>
              <input type="file" id="imgUpload" name="imgUpload" accept="image/jpeg, image/png, image/jpg" multiple>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" placeholder="Добавить фотографии">
            </div>
          </div>
        </form>
        <div class="submitBtn">
          <button class="btn waves-effect waves-light green" type="submit" name="action" id="btnSend" onclick="onCreatePost()">Отправить
          <i class="material-icons right">send</i>
        </button>
        </div>
        <div class="btnDeleteImg"><button class="btn-small" onclick="clearPreview()">Удалить фото</button></div>
      </form>
      
      <div id="preview"></div>
      
      
      {{/if}}

      <div id="modalInPost" class="myModal">
        <span class="close cursor" onclick="closeModalPost()">&times;</span>
        <div class="modal_content" id="contentInGalleryPost"></div>
        <a class="prev" onclick="plusSlidesPost(-1)">&#10094;</a>
        <a class="next" onclick="plusSlidesPost(1)">&#10095;</a>
      </div>
      <div id="posts" style='width:100%;'>
        <div class="preloader-wrapper active">
          <div class="spinner-layer spinner-red-only">
            <div class="circle-clipper left">
              <div class="circle"></div>
            </div>
            <div class="gap-patch">
              <div class="circle"></div>
            </div>
            <div class="circle-clipper right">
            <div class="circle"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</body>

</html>